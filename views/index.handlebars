<div class="row mx-auto">
<h1 class="mx-auto">Eat the burgers!</h1>
</div>

<div class="row juicy">
<div class="col-sm-3"></div>
<div class="col-sm-6">
<img src="/assets/img/Burger.jpg" class="rounded img-fluid" alt="Burger Picture">
</div>
<div class="col-sm-3"></div>
</div>

<div class="row">
<div class="col-sm-1"></div>
<div class="col-sm-4">
<h2>Burgers that are not eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-sm-2"></div>
<div class="col-sm-4 faded">
<h2>Burgers that are eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
<div class="col-sm-1"></div></div>

<div class="jumbotron">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devour?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
